<%- include("partials/header.ejs"); -%>

<div class="container">
  <h1>Home</h1>
  <p><%=content%></p>
</div>

<div class="createBtn-container">
  <a id="createPostBtn" href="/create">Create Post</a>
</div>

<% if (posts.length === 0) { %>
<div class="text-center">
  <h3>Please make a post... 🙏</h3>
</div>
<% } else { %> <%posts.forEach((post) => {%>
<div class="post-container">
  <h1><a href="/view/<%= posts.indexOf(post) %>"><%=post.title%></a></h1>
  <small>By: <%= post.date %></small>
  <p><%=post.content%></p>
</div>

<%})%> <% } %> <%- include('partials/footer.ejs'); -%>
